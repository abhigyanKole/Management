<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardCornerRadius="10dp"
    android:backgroundTint="@color/colorPrimaryDark">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject name"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:id="@+id/subjectname"
            android:fontFamily="@font/lato"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="taken by"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="@font/lato_thin"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sir Name"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:id="@+id/sirname"
            android:fontFamily="@font/lato"/>
        <CheckedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="Did you attend today's class?"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:id="@+id/attendancechecker"
            android:fontFamily="@font/lato"
            android:gravity="center"
            />
        <CheckedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="Did today's class take place?"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:id="@+id/adminclasschecker"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:visibility="gone"
            />
        <Button
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:background="@drawable/buttonbackground"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="Submit"
            android:textColor="@color/white"
            android:fontFamily="@font/lato"
            android:textSize="13sp"
            android:id="@+id/postbutton"/>
    </LinearLayout>

</android.support.v7.widget.CardView>